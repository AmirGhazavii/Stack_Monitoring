groups:
  - name: blackbox.rules
    rules:
      - alert: BlackboxProbeFailed
        expr: probe_success == 0
        for: 1m
        labels:
          severity: critical
          team: ops
          service: blackbox
        annotations:
          summary: "üî¥ Blackbox probe failed for {{ $labels.instance }}"
          description: |
            Probe failed to reach {{ $labels.instance }}.
            This means the target is unreachable or down.
            Check network connectivity or target service status.

      - alert: BlackboxProbeSlow
        expr: probe_duration_seconds > 2
        for: 2m
        labels:
          severity: warning
          team: ops
          service: blackbox
        annotations:
          summary: "‚ö†Ô∏è Slow response from {{ $labels.instance }}"
          description: |
            Probe duration exceeded 2 seconds ({{ $value }}s).
            This may indicate high latency or degraded performance.

      - alert: BlackboxHTTPStatusNot2xx
        expr: probe_http_status_code < 200 or probe_http_status_code >= 300
        for: 1m
        labels:
          severity: warning
          team: ops
          service: blackbox
        annotations:
          summary: "‚ö†Ô∏è Unexpected HTTP status {{ $value }} from {{ $labels.instance }}"
          description: |
            HTTP status code was {{ $value }}.
            Expected 2xx success response.
            This could indicate an issue with the target application.

      - alert: BlackboxSSLCertificateExpiringSoon
        expr: probe_ssl_earliest_cert_expiry - time() < 86400 * 7
        for: 10m
        labels:
          severity: warning
          team: ops
          service: blackbox
        annotations:
          summary: "‚ö†Ô∏è SSL certificate for {{ $labels.instance }} expires soon"
          description: |
            SSL certificate expires in less than 7 days.
            Renew certificate to avoid service interruption.

      - alert: BlackboxSSLCertificateExpired
        expr: probe_ssl_earliest_cert_expiry - time() < 0
        for: 5m
        labels:
          severity: critical
          team: ops
          service: blackbox
        annotations:
          summary: "üî¥ SSL certificate for {{ $labels.instance }} has expired!"
          description: |
            SSL certificate expired.
            Immediate action required to renew certificate.

